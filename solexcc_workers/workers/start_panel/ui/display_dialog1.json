{
    "id": "my_dialog1",
    "screen_id": "start",
    "title": "Manage StereoDNN Nodes",
    "layout": {
        "type": "LinearLayout",
        "layout_width": "match_parent",
        "layout_height": "wrap_content",
        "orientation": "vertical",
        "gravity": "top",
        "padding": 10,
        "children": [
            {
                "type": "TextView",
                "layout_width": "match_parent",
                "layout_height": "wrap_content",
                "padding": 30,
      	        "background": "red",
                "gravity": "center",
                "text": "Startup of the ROS ZED and RTSP Video Streaming Server nodes - click Start to launch or Stop to shutdown the  nodes"
            }
        ]
    },
    "buttons": [
        {
            "id": "cancel",
            "text": "Cancel",
            "on_click": {
                "action": "dismiss"
            }
        },
        {
            "id": "ok",
            "text": "Start ZED",
            "on_click": {
                "worker_id": "ZEDstart_panel",
                "msg_id": "ros_stereodnn_start"
            }
        },
        {
            "id": "stop",
            "text": "Shutdown ZED+Video ROS Nodes",
            "on_click": {
                "worker_id": "ZEDstart_panel",
                "msg_id": "ros_stereodnn_stop"
            }
        }
    ]
}
